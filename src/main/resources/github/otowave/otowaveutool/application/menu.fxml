<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="menuRoot" layoutX="-1.0" prefHeight="40.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="github.otowave.otowaveutool.application.MenuController">
    <left>
        <Button fx:id="btnAuthor" mnemonicParsing="false" onAction="#showSceneAuthor" prefHeight="40.0" prefWidth="190.0" style="-fx-background-radius: 0;" text="author" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Button>
    </left>
    <right>
        <Button fx:id="btnSettings" mnemonicParsing="false" onAction="#showSceneSettings" prefHeight="40.0" prefWidth="190.0" style="-fx-background-radius: 0;" text="settings" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Button>
    </right>
    <center>
        <AnchorPane prefHeight="40.0" prefWidth="211.0" BorderPane.alignment="CENTER">
            <Button fx:id="btnMusic" layoutY="1.0" mnemonicParsing="false" onAction="#showSceneMusic" prefHeight="40.0" prefWidth="112.0" style="-fx-background-radius: 0;" text="music">
                <font>
                    <Font name="Arial" size="16.0" />
                </font>
            </Button>
            <Button fx:id="btnAlbum" layoutX="112.0" layoutY="1.0" mnemonicParsing="false" onAction="#showSceneAlbum" prefHeight="40.0" prefWidth="112.0" style="-fx-background-radius: 0;" text="album">
                <font>
                    <Font name="Arial" size="16.0" />
                </font>
            </Button>
        </AnchorPane>
    </center>
</BorderPane>
